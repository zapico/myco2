<h1>New device</h1>

<% form_for(@device) do |f| %>
  <%= f.error_messages %>

  <p>
  	<p><label for="device_name">Name</label><br/>
	<%= text_field 'device', 'name'  %></p>
	
	<p><label for="device_info">Information</label><br/>
	<%= text_area 'device', 'info'  %></p>
	
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', devices_path %>
