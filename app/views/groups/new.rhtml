<div id="content_left">
<h1>New group</h1>

<% form_for(@group) do |f| %>
  <%= f.error_messages %>
	    <p>Name<br/>
	<%= text_field 'group', 'name'  %></p>
	    <p>Info<br/>
	<%= text_area 'group', 'info'  %></p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', groups_path %>
</div>